<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:cardBackgroundColor="@color/cardview_light"
    android:orientation="vertical"
    app:cardCornerRadius="15dp"
    app:cardElevation="8dp"
    app:cardUseCompatPadding="true"
    android:clipToPadding="false"
    android:paddingBottom="@dimen/cardview_default_elevation"
    android:paddingTop="@dimen/cardview_default_elevation"
    android:id="@+id/PartsCard">
    <LinearLayout
        android:id="@+id/layoutParts"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:animateLayoutChanges="true">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/PartsImage"
                android:layout_width="100dp"
                android:layout_height="100dp"
                tools:src="@drawable/amd_cpu"
                android:layout_margin="10dp"/>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/PartsName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="Product Name"
                    android:textSize="30sp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:layout_centerHorizontal="true"/>
                <TextView
                    android:id="@+id/PartsPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="Price"
                    android:textSize="30sp"
                    android:layout_marginStart="10dp"
                    android:textColor="@color/white"
                    android:textAlignment="center"
                    android:layout_below="@id/PartsName"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="10dp"/>
            </RelativeLayout>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/detailsParts"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="10dp"
            android:visibility="gone">
            <TextView
                android:id="@+id/socketInfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="HELLO MY NAME IS JESUS"
                android:textColor="@color/white"
                android:textSize="20sp" />
        </LinearLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>