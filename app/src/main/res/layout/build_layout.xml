                                android:layout_marginStart="10dp"/>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">
                                <TextView
                                    android:id="@+id/vgaText"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    tools:text="VGA"
                                    android:textStyle="bold"
                                    android:textColor="@color/white"
                                    android:textAlignment="center"
                                    android:textSize="25sp"
                                    android:fontFamily="@font/francois_one"/>
                                <TextView
                                    android:id="@+id/vga_Price"
                                    android:layout_width="wrap_content"
                                    android:layout_gravity="center"
                                    android:gravity="center"
                                    tools:text="$0.00"
                                    android:textColor="@color/white"
                                    android:layout_height="wrap_content"
                                    android:textSize="25sp" />
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:id="@+id/id_case"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_row="8"
                    android:layout_column="0"
                    android:layout_gravity="fill"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"
                    android:layout_margin="8dp"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="8dp"
                    app:cardBackgroundColor="@color/cardview_dark">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <CheckedTextView
                            android:id="@+id/checkedCase"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="CASE"
                            android:layout_gravity="center"
                            android:fontFamily="@font/francois_one"
                            android:textSize="30sp"
                            android:textColor="@color/white"
                            android:textAlignment="center"
                            android:checked="false"
                            android:gravity="center"
                            android:checkMarkTint="@color/white"
                            android:checkMark="?android:attr/listChoiceIndicatorMultiple"/>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:padding="5dp"
                            android:layout_margin="10dp">
                            <ImageView
                                android:id="@+id/case_link_image"
                                android:layout_width="75dp"
                                android:layout_height="75dp"
                                tools:src="@drawable/ic_blank_image"
                                android:layout_gravity="start"
                                android:layout_marginStart="10dp"/>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">
                                <TextView
                                    android:id="@+id/caseText"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    tools:text="CASE"
                                    android:textStyle="bold"
                                    android:textColor="@color/white"
                                    android:textAlignment="center"
                                    android:textSize="25sp"
                                    android:fontFamily="@font/francois_one"/>
                                <TextView
                                    android:id="@+id/case_Price"
                                    android:layout_width="wrap_content"
                                    android:layout_gravity="center"
                                    android:gravity="center"
                                    tools:text="$0.00"
                                    android:textColor="@color/white"
                                    android:layout_height="wrap_content"
                                    android:textSize="25sp" />
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </GridLayout>
        </RelativeLayout>
    </ScrollView>
    <View
        android:layout_above="@id/totalLayout"
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="@color/black"/>
    <RelativeLayout
        android:id="@+id/totalLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true">
    <TextView
        android:id="@+id/totalText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:fontFamily="@font/francois_one"
        android:text="Total"
        android:textColor="@color/white"
        android:textSize="30sp"
        android:layout_marginBottom="10dp"
        android:layout_alignParentStart="true"/>
        <TextView
            android:id="@+id/total"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:fontFamily="@font/francois_one"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="10dp"
            tools:text="$0.00"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="30sp"
            android:layout_marginBottom="10dp"/>
    </RelativeLayout>


</RelativeLayout>
