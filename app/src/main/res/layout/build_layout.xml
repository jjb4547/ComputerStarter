                        </LinearLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:id="@+id/psu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_row="4"
                    android:layout_column="0"
                    android:layout_gravity="fill"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"
                    android:layout_margin="8dp"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="8dp"
                    app:cardBackgroundColor="@color/cardview_dark">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <CheckedTextView
                            android:id="@+id/checkedPSU"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="POWER SUPPLY UNIT"
                            android:layout_gravity="center"
                            android:fontFamily="@font/francois_one"
                            android:textSize="30sp"
                            android:textColor="@color/white"
                            android:textAlignment="center"
                            android:checked="false"
                            android:gravity="center"
                            android:checkMarkTint="@color/white"
                            android:checkMark="?android:attr/listChoiceIndicatorMultiple"/>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:padding="5dp"
                            android:layout_margin="10dp">
                            <ImageView
                                android:id="@+id/psu_link_image"
                                android:layout_width="75dp"
                                android:layout_height="75dp"
                                tools:src="@drawable/ic_blank_image"
                                android:layout_gravity="start"
                                android:layout_marginStart="10dp"/>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">
                                <TextView
                                    android:id="@+id/psuText"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    tools:text="PSU"
                                    android:textStyle="bold"
                                    android:textColor="@color/white"
                                    android:textAlignment="center"
                                    android:textSize="25sp"
                                    android:fontFamily="@font/francois_one"/>
                                <TextView
                                    android:id="@+id/psu_Price"
                                    android:layout_width="wrap_content"
                                    android:layout_gravity="center"
                                    android:gravity="center"
                                    tools:text="$0.00"
                                    android:textColor="@color/white"
                                    android:layout_height="wrap_content"
                                    android:textSize="25sp" />
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:id="@+id/cool"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_row="5"
                    android:layout_column="0"
                    android:layout_gravity="fill"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"
                    android:layout_margin="8dp"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="8dp"
                    app:cardBackgroundColor="@color/cardview_dark">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <CheckedTextView
                            android:id="@+id/checkedCool"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="CPU COOLER"
                            android:layout_gravity="center"
                            android:fontFamily="@font/francois_one"
                            android:textSize="30sp"
                            android:textColor="@color/white"
                            android:textAlignment="center"
                            android:checked="false"
                            android:gravity="center"
                            android:checkMarkTint="@color/white"
                            android:checkMark="?android:attr/listChoiceIndicatorMultiple"/>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:padding="5dp"
                            android:layout_margin="10dp">
                            <ImageView
                                android:id="@+id/cool_link_image"
                                android:layout_width="75dp"
                                android:layout_height="75dp"
                                tools:src="@drawable/ic_blank_image"
                                android:layout_gravity="start"
                                android:layout_marginStart="10dp"/>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">
                                <TextView
                                    android:id="@+id/coolText"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    tools:text="CPU COOLER"
                                    android:textStyle="bold"
                                    android:textColor="@color/white"
                                    android:textAlignment="center"
                                    android:textSize="25sp"
                                    android:fontFamily="@font/francois_one"/>
                                <TextView
                                    android:id="@+id/cool_Price"
                                    android:layout_width="wrap_content"
                                    android:layout_gravity="center"
                                    android:gravity="center"
                                    tools:text="$0.00"
                                    android:textColor="@color/white"
                                    android:layout_height="wrap_content"
                                    android:textSize="25sp" />
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:id="@+id/mon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_row="6"
                    android:layout_column="0"
                    android:layout_gravity="fill"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"
                    android:layout_margin="8dp"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="8dp"
                    app:cardBackgroundColor="@color/cardview_dark">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <CheckedTextView
                            android:id="@+id/checkedMon"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="MONITOR"
                            android:layout_gravity="center"
                            android:fontFamily="@font/francois_one"
                            android:textSize="30sp"
                            android:textColor="@color/white"
                            android:textAlignment="center"
                            android:checked="false"
                            android:gravity="center"
                            android:checkMarkTint="@color/white"
                            android:checkMark="?android:attr/listChoiceIndicatorMultiple"/>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:padding="5dp"
                            android:layout_margin="10dp">
                            <ImageView
                                android:id="@+id/mon_link_image"
                                android:layout_width="75dp"
                                android:layout_height="75dp"
                                tools:src="@drawable/ic_blank_image"
                                android:layout_gravity="start"
                                android:layout_marginStart="10dp"/>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">
                                <TextView
                                    android:id="@+id/monText"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    tools:text="MONITOR"
                                    android:textStyle="bold"
                                    android:textColor="@color/white"
                                    android:textAlignment="center"
